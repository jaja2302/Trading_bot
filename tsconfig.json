{
  "compilerOptions": {
    "target": "ES2020", // Set the target JavaScript version
    "module": "ESNext", // Use ESNext module resolution
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Directory for compiled output
    "rootDir": ".", // Set rootDir to the project root
    "moduleResolution": "node", // or "nodenext"
    "allowJs": true // Allow JavaScript files to be compiled
  },
  "include": ["**/*.ts", "**/*.js"], // Include all TypeScript and JavaScript files
  "exclude": ["node_modules"] // Exclude node_modules
}
